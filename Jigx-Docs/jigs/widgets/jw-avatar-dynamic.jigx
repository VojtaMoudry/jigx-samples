name: Avatar - dynamic data
type: '@jigx/jig/default'

datasources:
  profile:
    componentId: '@jigx/jd-sqlite'
    options:
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - jigxDocs/profile
      query: |
        SELECT
          id,
          '$.photo',
          '$.description'
        FROM [jigxDocs/profile]  
        
children:
  - componentId: '@jigx/jc-avatar'
    options:
      text: NA
      uri: =@ctx.data.profile.photo
      
views:
  2x2:
    componentId: '@jigx/jw-universal'
    options:
      center:
        componentId: '@jigx/jc-avatar'
        options:
          text: ''
          uri: =@ctx.data.profile.photo
    
