name: Pie Chart (1 series)
referenceId: jc-charts-pie-one-series

datasources:
  series1:
    componentId: '@jigx/jd-static'
    options:
      data:
        - y: 1
        - y: 2
        - y: 3
        - y: 2

children:
  - componentId: '@jigx/jc-pie-chart'
    options:
      chart:
        height: 250
      yAxis:
        max: 25
      xAxis:
        categories:
          - 'Sample Data'
      series:
        - data: =@ctx.data.series1
          name: Pie
          description: Chart
          type: pie
