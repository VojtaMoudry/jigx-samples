type: datasource.sqlite
options:
  provider: DATA_PROVIDER_DYNAMIC
  entities:
    - entity: default/finances
    - entity: default/finance-review-dynamic

  query: |
    SELECT
      json_extract(A.Data, '$.title') as title,
      json_extract(A.Data, '$.subtitle') as subtitle,
      json_extract(A.Data, '$.year') as year,
      json_extract(B.Data, '$.amount') as y,
      json_extract(B.Data, '$.date') as date,
      json_extract(B.Data, '$.financeid') as financeid,
      json_extract(B.Data, '$.quarterid') as quarterid,
      json_extract(B.Data, '$.share') as share
    FROM [default/finance-review-dynamic] A
    LEFT JOIN [default/finances] B ON
    json_extract(A.Data, '$.year') = json_extract(B.Data, '$.year')
