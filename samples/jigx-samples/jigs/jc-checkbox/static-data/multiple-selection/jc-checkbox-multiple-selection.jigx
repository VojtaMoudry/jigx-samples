name: Checkbox
referenceId: jc-checkbox-multiple-selection

type: "@jigx/jig/form"

provider: DATA_PROVIDER_DYNAMIC
method: save
entity: default/confirms

actions:
  - children:
      - componentId: "@jigx/action/submit-form"
        instanceId: submit-form
        options:
          title: Submit
          formId: sample-form
      - componentId: "@jigx/action/go-back"
        options:
          title: Cancel

header:
  children:
    componentId: "@jigx/component/image"
    options:
      title: What days do you typically work?
      source:
        uri: 'https://cdn2.webdamdb.com/v1_1280_6enPaxIBt9M3.jpg?1554490336'
        
children:
  - componentId: "@jigx/component/checkbox"
    options:      
      property: sunday
      label: Sunday
      isRequired: false
  - componentId: "@jigx/component/checkbox"
    options:      
      property: monday
      label: Monday
      isRequired: false
  - componentId: "@jigx/component/checkbox"
    options:      
      property: tuesday
      label: Tuesday
      isRequired: false
  - componentId: "@jigx/component/checkbox"
    options:      
      property: wednesday
      label: Wednesday
      isRequired: false
  - componentId: "@jigx/component/checkbox"
    options:      
      property: thursday
      label: Thursday
      isRequired: false
  - componentId: "@jigx/component/checkbox"
    options:      
      property: friday
      label: Friday
      isRequired: false
  - componentId: "@jigx/component/checkbox"
    options:      
      property: saturday
      label: Saturday
      isRequired: false
