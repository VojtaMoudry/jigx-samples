title: Name
type: jig.default
description: With execute-entity you can save, update or delete your data from your database. This is an example how to use it in onLoad event.

onRefresh: 
  type: action.execute-entity
  options:
    provider: DATA_PROVIDER_DYNAMIC
    method: save
    goBack: stay
    entity: default/form
    data: 
      id: =@ctx.current.item.id
      modify: =$now()


children:
  - type: component.entity
    options:
      children:
        - type: component.field-row
          options:
            children:
              - type: component.entity-field
                instanceId: firstname
                options:
                  label: First Name
                  value: =@ctx.data.employees.firstname
              - type: component.entity-field
                instanceId: lastname
                options:
                  label: Last Name
                  value: =@ctx.data.employees.lastname
        - type: component.field-row
          options:
            children:
              - type: component.entity-field
                instanceId: email
                options:
                  label: Email
                  value: =@ctx.data.employees.email
              - type: component.entity-field
                instanceId: phone
                options:
                  label: Phone
                  value: =@ctx.data.employees.phone