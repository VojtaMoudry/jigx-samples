type: jig.calendar
title: =$now('[D1o] [MNn] [Y]')

data: =@ctx.datasources.eventVacation
item: 
  type: component.event
  options:
    title: =@ctx.current.item.name
    from: 
      text: =@ctx.current.item.date_from
      format: 
        dateFormat: "l"
    to: =@ctx.current.item.date_to
    location: =@ctx.current.item.location
    isAllDay: true