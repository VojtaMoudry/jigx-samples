title: Product item
type: jig.list

data: =@ctx.datasources.products
isSearchable: true
item: 
  componentId: component.product-item
  options:
    title: "=@ctx.parents.list-data.item.title"
    image:
      uri: =@ctx.parents.list-data.item.uri
    tag: =@ctx.parents.list-data.item.tag
    price: 
      value: =@ctx.parents.list-data.item.price
      format:
        numberStyle: currency
    discount: =@ctx.parents.list-data.item.discount