type: "@jigx/jig/calendar"
name: Next Meeting

data: =@ctx.datasources.static-global-multiple
item: 
  componentId: "@jigx/component/event"
  options:
    title: =@ctx.parents.list-data.item.name
    from: 
      text: =@ctx.parents.list-data.item.date_from
      format: 
        dateFormat: "l"
    to: =@ctx.parents.list-data.item.date_to

views:    
  2x2:
    componentId: "@jigx/widget/avatar"
    options:
      text: =$substring($substringBefore(@ctx.datasources.static-global-multiple[0].name, " "), 0, 1) & $substring($substringAfter(@ctx.datasources.static-global-multiple[0].name, " "), 0, 1)
      uri: =@ctx.datasources.static-global-multiple[0].picture
      bottom: 
        componentId: "@jigx/component/titles"
        options:
          align: center
          title: =@ctx.datasources.static-global-multiple[0].name
          subtitle: =$fromMillis($toMillis(@ctx.datasources.static-global-multiple[0].date_from),'[H01]:[m01]') & '-' & $fromMillis($toMillis(@ctx.datasources.static-global-multiple[0].date_to),'[H01]:[m01]')