title: Email
referenceId: email-field-dynamic
type: jig.default

actions:
  - children:
      - componentId: action.execute-entity
        options:
          title: Submit
          provider: DATA_PROVIDER_DYNAMIC
          entity: default/form
          method: save
header:
    componentId: component.image
    options:
      title: Email 
      source:
        uri: 'https://cdn2.webdamdb.com/v1_1280_6enPaxIBt9M3.jpg?1554490336'
        
datasources: 
  email-field:
    componentId: datasource.sqlite
    options:
      isDocument: true
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - entity: default/email-field
      query: |
        SELECT
          '$.id',
          '$.email'
        FROM [default/email-field]
  
        
children:
  - componentId: component.form
    instanceId: emails-form
    options:
      children: 
        - componentId: component.email-field
          instanceId: email
          options:
            label: Email
            helperText: =@ctx.datasources.email-field.email
