    - componentId: '@jigx/ja-submit-form'
      instanceId: new-player
      options:
        formId: new-player
        icon: add
        title: Add new player
        onSuccess:
          title: 'New player created'
          actions:
            - componentId: '@jigx/ja-go-to'
              options:
                title: Capture another
                linkTo: player-signup
                


provider: DATA_PROVIDER_DYNAMIC
entity: default/player
children:
  - 
    - componentId: '@jigx/jc-date-picker'
      options:
       property: date
       type: date
       label: 'Date Control (with =$now)'
      #  initialValue: '12/31/1985'
       value: =$now()   
       isRequired: true
  - 
    - componentId: '@jigx/jc-date-picker'
      options:
       property: time
       type: time
       label: 'Time Control:'
      #  initialValue: '12/31/1985'
       isRequired: true
  -
    - componentId: '@jigx/jc-date-picker'
      options:
       property: datetime
       type: datetime
       label: 'Date and Time Control: (with =$now)'
      #  initialValue: '12/31/1985'   
      #  value: =$now  
       initialValue: =$now()        
       
  - componentId: '@jigx/jc-date-picker'
    options:
      property: minmax3
      type: datetime
      label: 'Min Max DATE & TIME:'
      minimumDate: '2022-03-21 09:00'
      maximumDate: '2022-04-14 11:00'
  - componentId: '@jigx/jc-date-picker'
    options:
      property: minmax2
      type: time
      label: 'Min Max TIME:'
      minimumDate: '2022-03-21 09:00'
      maximumDate: '2022-03-21 18:00'  
  - componentId: '@jigx/jc-date-picker'
    options:
      property: minmax1
      type: date
      label: 'Min Max DATE'
      minimumDate: '2022-03-21 09:00'
      maximumDate: '2022-03-27 11:00'   
            
  -
    - componentId: "@jigx/jc-date-picker"
      options:
        label: 'Time picker with initial value'
        property: delay_from_alternative
        type: time
        initialValue: =$now()
 
  - componentId: "@jigx/jc-image-picker"
    options:
      property: feedback_photograph
      type: single
      label: "Select a single image"
      isRequired: true 
      
  - componentId: "@jigx/jc-image-picker"
    options:
      property: feedback_photograph2
      type: multiple
      label: "Select multiple images"
      isRequired: false 

  # - componentId: "@jigx/jc-file-picker"
  #   options:
  #     property: feedback_file
  #     type: single
  #     label: "Select a single files"
  #     isRequired: false 
          
