  - componentId: "@jigx/jc-dropdown"
    instanceId: recycle-category
    options:
     label: "Waste type"
     property: recycle-category
     initialValue: Oil
     data: =@ctx.data.recycle-category
     isRequired: true

  - componentId: "@jigx/jc-text-field"
    instanceId: recycle-volume
    options:
      label: "Volume (liters)"
      property: recycle-volume
      # initialValue: "7"
      value: "7"

  - componentId: "@jigx/jc-checkbox"
    instanceId: checkbox-control
    options:
      property: checkbox-control
      label: "checkbox false1"
      type: checkbox
      initialValue: false
      # value: false
      isRequired: true

  - componentId: "@jigx/jc-checkbox"
    instanceId: checkbox-control2
    options:
      property: checkbox-control2
      label: "checkbox true"
      type: checkbox
      initialValue: true      

  - componentId: "@jigx/jc-email-field"
    options:
      value: "support@jigx.com"
      property: email-icon
      label: "Email 2"
      type: "email"
      # icon: "=@ctx.jig.state.checkbox-control.value ?  'check-1' : 'cog-double'" 
      icon: "=@ctx.jig.state.recycle-volume.value = '7' ? 'check-1' : 'cog-double'" 
      isRequired: true
      
  - componentId: '@jigx/jc-text-field'
    options:
      style:
        isBusy: true
      label: isBusy1
      property: field2    

  - componentId: '@jigx/jc-text-field'
    options:
      style:
        isBusy: true
      label: isBusy3
      # value: "this is a value"
      initialValue: "this is inital value"
      property: field2
      
  - componentId: "@jigx/jc-number-field"
    options:
      property: number-counter
      label: number-counter
      initialValue: "2.3"
      stepper:
        isEnabled: true
        value: 0.5
      isRequired: true        
        
  - componentId: '@jigx/jc-image-picker'
    options:
      property: type-avatar  
      type: avatar
      data: ''
      label: Avatar 
          
  - componentId: '@jigx/jc-text-field'
    instanceId: colourtest
    options:
      # isAutoFocused: true
      icon: home
      property: colourtest
      label: colour test (with auto focus)
      isHidden: false
      # isRequired: "=(2 = 1) ? true: false"
      color:
        - when: =10
          color: "negative"
        - when: =2
          color: "color3"
        - when: =0
          color: "color8"
          
  - componentId: "@jigx/jc-number-field"
    options:
      property: numbercolout
      label: number-colour-test
      initialValue: "2"
      stepper:
        isEnabled: true
        value: 1           
      color:
        - when: =10
          color: "negative"
        - when: =2
          color: "color3"
        - when: =0
          color: "color8"
          
