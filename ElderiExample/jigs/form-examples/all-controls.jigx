name: All controls
referenceId: all-controls
type: '@jigx/jig/form'
icon: calendar
# description: 

header:
  children:
    componentId: "@jigx/jc-image"
    options:
      title: Player Information
      source:
        uri: https://static.wixstatic.com/media/c8c1c8_2c6df3aa716b4863acd0c3ea811cee04~mv2.jpg/v1/fill/w_1280,h_453,fp_0.44_0.34,q_85/c8c1c8_2c6df3aa716b4863acd0c3ea811cee04~mv2.jpg

datasources:
  recycle-category:
    componentId: "@jigx/jd-static"
    options:
      data:
        - title: Oil
          value: Oil
        - title: Grease
          value: Grease
        - title: Other
          value: Other
          
  video:
    componentId: '@jigx/jd-static'
    options:
      data:
        - uri: "https://www.youtube.com/watch?v=An3w61elCXM"
          title: Spoegwolf          

